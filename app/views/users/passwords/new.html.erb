<div class="flex flex-col items-center">
  <div class="font-bold text-2xl">Forgot your password ?</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field flex justify-center items-baseline mt-2">
      <%= f.label :email, class: "mr-1" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="actions flex justify-center">
      <%= f.submit "Send me reset password instructions", class: "btn bg-gray-600 text-white" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
