<div class="flex flex-col items-center">
  <div class="font-bold text-2xl">Log in</div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field mt-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "mt-1", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field mt-2">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "mt-1", autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "pl-1" %>
      </div>
    <% end %>
    <div class="actions flex justify-center">
      <%= f.submit "Log in", class: "btn bg-green-600 text-white" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
  <div class="flex flex-col items-start pt-1">
  </div>
</div>
